<p id="notice"><%= notice %></p>

<h1>Offers</h1>

<table class='pure-table pure-table-bordered'>
  <thead>
    <tr>
      <th>Advertiser name</th>
      <th>Url</th>
      <th>Description</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th>State</th>
      <th>Premium</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <% offer_decorated = OfferDecorator.new(offer) %>
      <%= render partial: 'offer', locals: { offer: offer_decorated } %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offer', new_offer_path %>
